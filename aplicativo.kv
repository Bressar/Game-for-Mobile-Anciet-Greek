<Tela1>:
    name: "tela1"
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MDLabel: # Cabeçalho
            text: "Ascent to Olympus"
            font_name: "Gelio Fasolada"
            halign: "center"
            color: 218/255, 165/255, 32/255, 1
            size_hint: (0.8, 0.8)
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}
            font_size: 50
        MDLabel:
            text: "The Ancient Greek Game"
            font_name: "Gelio Greek Diner"
            halign: "center"
            valign: "top"
            color: 1, 0, 0, 1
            size_hint: (0.8, 0.8)
            pos_hint: {'center_x': 0.5, 'center_y': 0.905}
            font_size: 25
        MDLabel:
            text: "<><><><><><><><><><><><><><><><><><><><><><><><><><>"
            font_name: "Arial"
            font_size: 16
            bold: True
            halign: "center"
            color: 184/255, 134/255, 11/255, 1
            size_hint: (0.8, 0.8)
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
        Button: # Imagem de abertura
            size_hint: None, None
            size: 500, 364
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            background_normal: 'images/abre.jpg'
        MDLabel:
            text: "<><><><><><><><><><><><><><><><><><><><><><><><><><>"
            font_name: "Arial"
            font_size: 16
            bold: True
            halign: "center"
            color: 184/255, 134/255, 11/255, 1
            size_hint: (0.8, 0.8)
            pos_hint: {'center_x': 0.5, 'center_y': 0.46}
        MDLabel: # Texto de apresentação e regras
            text: "Embark on a Greek Mythology Adventure!\nRoll the dice, collect cards, overcome challenges, and conquer Olympus!\nMove across the board by rolling the dice.\nWin battles by rolling 4 or more.\nUse cards to overcome obstacles.\nCollect up to 3 cards."
            font_name: "Olympus Bold"
            font_size: 25
            halign: "center"
            color: 1, 1, 1, 1
            size_hint: (0.8, 0.8)
            pos_hint: {'center_x': 0.5, 'center_y': 0.33}
        MDLabel:
            text: "<><><><><><><><><><><><><><><><><><><><><><><><><><>"
            font_name: "Arial"
            font_size: 16
            bold: True
            halign: "center"
            color: 184/255, 134/255, 11/255, 1
            size_hint: (0.8, 0.8)
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        MDRaisedButton:
            text: "Become a Legend!"
            font_name: "Gelio Fasolada"
            elevation: 0
            font_size: 20
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.12}
            on_release:
                app.root.current = "tela2"
                self.md_bg_color = app.theme_cls.primary_color


